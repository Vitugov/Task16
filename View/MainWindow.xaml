<Window x:Class="Task16.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task16"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock Text="Строка подключения SQL Server:"/>
            <TextBlock Text="Состояние:"/>
            <TextBlock Text="Строка подключения MS Access:"/>
            <TextBlock Text="Состояние:"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding SqlConnectionString, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding SqlConnectionStatus, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding AccessConnectionString, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding AccessConnectionStatus, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</Window>
